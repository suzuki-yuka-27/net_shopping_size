<div>
  <h1 class= "text-center font-bold text-4xl m-5">BOTTOMS</h1>
  <%= form_with model: bottom, url: bottom_path, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class= "flex flex-row justify-center gap-5 p-5">
      <div class= "flex flex-col items-center">
        <%= f.label :waist %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :waist, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
      <div class= "flex flex-col items-center">
        <%= f.label :hip %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :hip, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
      <div class= "flex flex-col items-center">
        <%= f.label :rising_length %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :rising_length, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
      <div class= "flex flex-col items-center">
        <%= f.label :inseam %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :inseam, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
      <div class= "flex flex-col items-center">
        <%= f.label :total_length %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :total_length, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
      <div class= "flex flex-col items-center">
        <%= f.label :thickness_of_thigh %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :thickness_of_thigh, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
      <div class= "flex flex-col items-center">
        <%= f.label :bottom_width %>
        <div class= "flex flex-row mb-5 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          <%= f.text_field :bottom_width, class: 'w-16 border-none focus:outline-none text-end' %>
          <p class= "p-2">cm</p>
        </div>
      </div>
    </div>
    <% if current_page?(controller: 'bottoms', action: 'new') %>
      <div class= "flex flex-col items-center">
        <%= f.submit t('defaults.create'), class: 'mt-7  bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow' %>
      </div>
    <% else %>
      <div class= "flex flex-col items-center">
        <%= f.submit t('defaults.update'), class: 'mt-7  bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow' %>
      </div>
    <% end %>
  <% end %>
</div>