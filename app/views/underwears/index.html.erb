<% content_for(:title, Underwear.model_name.human) %>
<div>
  <div class= "flex justify-center mb-10">
    <%= image_tag 'underwears_logo_image.png', size: '400x400' %>
  </div>
  <div class= "flex flex-row-reverse">
    <div class= "bg-black text-white text-center rounded-full w-20 px-4 py-2 mb-5">
      <%= link_to 'New', new_underwear_path %>
    </div>
  </div>
  <div class= "flex justify-center">
    <% if @underwears.present? %>
      <div class= "grid grid-cols-1 lg:grid-cols-3 gap-7">
        <%= render @underwears %>
      </div>
    <% else %>
      <div class= "font-bold">
        <%= t('defaults.no_size') %>
      </div>
    <% end %>
  </div>
</div>