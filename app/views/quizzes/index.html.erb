<% set_meta_tags title: Quiz.model_name.human %>
<div class= "flex justify-center mb-10">
  <%= image_tag 'quizzes_logo_image.png', size: '400x400' %>
</div>
<div>
  <% if @quizzes.present? %>
    <div class= "grid-cols-1">
      <%= render @quizzes %>
    </div>
  <% else %>
    <div class= "font-bold">
      <p><%= t('.no_record') %></p>
    </div>
  <% end %>
</div>