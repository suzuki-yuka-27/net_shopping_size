<div class= "p-4 w-full max-w-sm bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
  <h1 class= "text-center font-bold text-4xl m-5">Sign Up</h1>
  <%= form_with model: @size, local: true do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'タイトル', class: 'mb-5 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="flex flex-col items-center">
      <%= f.submit 'Update', class: 'mt-7  bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow' %>
    </div>
  <% end %>
</div>