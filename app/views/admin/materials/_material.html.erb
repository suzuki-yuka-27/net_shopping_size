<div class= "flex flex-col items-center mb-5 bg-white rounded-lg shadow-md md:flex-row md:max-w-xl hover:bg-gray-100">
  <%= image_tag material.material_image_url, class: 'object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg' %>
  <div class= "flex flex-col">
    <%= link_to admin_material_path(material) do %>
      <div class= "mb-2 ml-3 text-2xl font-bold">
        <%= material.name %>
      </div>
    <% end %>
    <div class= "flex justify-end mr-3">
      <div class= "bg-black text-white rounded-full px-5 py-3 mx-3">
        <%= link_to 'Edit', edit_admin_material_path(material) %>
      </div>
      <div class= "bg-black text-white rounded-full px-5 py-3">
        <%= button_to 'Delete', admin_material_path(material), method: :delete %>
      </div>
    </div>
  </div>
</div>