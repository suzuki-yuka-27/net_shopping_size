<% set_meta_tags title: Material.model_name.human %>
<div class= "flex justify-center mb-10">
  <%= image_tag 'materials_logo_image.png', size: '500x500' %>
</div>
<div class= "flex justify-end px-6 py-3 my-5 bg-black text-white font-bold rounded-full">
  <%= link_to 'New', new_admin_material_path %>
</div>
<div>
  <% if @materials.present? %>
    <div class= "grid-cols-1">
      <%= render @materials %>
    </div>
  <% else %>
    <div class= "font-bold">
      <p><%= t('.no_record') %></p>
    </div>
  <% end %>
</div>